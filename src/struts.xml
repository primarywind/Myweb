<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
         "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.action.extension" value="action" /><!--这里!!!扩展名修改 -->
	<constant name="struts.i18n.encoding" value="utf-8" />
	<!-- 使用spring,将action托管给spring -->
	<constant name="struts.objectFactory" value="spring" />

	<package name="myweb" extends="struts-default">
		<action name="user" class="com.myweb.action.UserAction" method="reg">
			<result name="reg_ok">reg_ok.jsp</result>
		</action>
	</package>

	<package name="jsonkpi" extends="json-default">
		<action name="findArticlesByPage" class="com.myweb.action.ArticleAction"
			method="findArticlesByPage">
			<result type="json">
				<param name="root">responseJson</param>
			</result>
		</action>

		<action name="findArticlesNums" class="com.myweb.action.ArticleAction"
			method="findArticlesNums">
			<result type="json">
				<param name="root">responseJson</param>
			</result>
		</action>

		<action name="findArticleDetail" class="com.myweb.action.ArticleAction"
			method="findArticleDetail">
			<result type="json">
				<param name="root">responseJson</param>
			</result>
		</action>

		<action name="findAllCategories" class="com.myweb.action.CategoryAction"
			method="findAllCategories">
			<result type="json">
				<param name="root">responseJson</param>
			</result>
		</action>


		<action name="findPicturesByPage" class="com.myweb.action.PictureAction"
			method="findPicturesByPage">
			<result type="json">
				<param name="root">responseJson</param>
			</result>
		</action>

		<action name="findSendCardsByPage" class="com.myweb.action.SendCardAction"
			method="findSendCardsByPage">
			<result type="json">
				<param name="root">responseJson</param>
			</result>
		</action>
		
		<action name="findSendCardDateilsByPage" class="com.myweb.action.SendCardAction"
			method="findSendCardDateilsByPage">
			<result type="json">
				<param name="root">responseJson</param>
			</result>
		</action>

	</package>

</struts>